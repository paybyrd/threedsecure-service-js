{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@paybyrd/logger-js": ["./node_modules/@paybyrd/logger-js"],
      "@paybyrd/threedsecure-service-js/*": ["./src/*"],
      "@paybyrd/http-client": ["./src/httpClients"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "example"]
}